{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=comedypull;Username=postgres;Password=postgres;Include Error Detail=true",
    "Redis": "redis:6379"
  },
  "ApiOptions": {
    "TimeoutSeconds": 60,
    "RetryAttempts": 1
  },
  "DataSyncOptions": {
    "SourceRecordIngestion": {
      "BatchSize": 500,
      "FlushIntervalSeconds": 10,
      "QueueTimeoutSeconds": 10
    },
    "PunchupCollection": {
      "Concurrency": 2
    }
  }
}
